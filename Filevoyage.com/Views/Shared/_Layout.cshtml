<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FileVoyage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/fv-hero.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="fv-navbar" role="navigation" aria-label="Menú principal">
            <ul class="fv-nav-list">
                <li><a href="/" class="fv-nav-link">Inicio</a></li>
                <a asp-controller="Home" asp-action="Privacy" class="fv-nav-link">Privacidad</a>
            </ul>
        </nav>
    </header>


    <div class="fv-hero">
        <div class="fv-overlay" aria-hidden="true"></div>
        <main class="fv-content" id="mainContent" role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="fv-footer" role="contentinfo">
        <p>© 2025 - Randall Vargas – Filevoyage.com · <a asp-controller="Home" asp-action="Privacy">Privacidad</a></p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
