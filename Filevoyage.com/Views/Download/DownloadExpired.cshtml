@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Enlace expirado – FileVoyage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/fv-hero.css" rel="stylesheet" />
</head>
<body>
    <div class="fv-hero">
        <div class="fv-overlay" aria-hidden="true" aria-live="off"></div>
        <main id="mainContent" role="main" class="fv-content">
            <div class="fv-card">
                <h1>FileVoyage</h1>
                <p class="fv-sub">Oops…</p>
                @if (ViewBag.ErrorReason != null)
                {
                    <p>@ViewBag.ErrorReason</p>
                }
                else
                {
                    <p>Lo sentimos, este enlace ya no está disponible.</p>
                }
                <a href="~/" class="fv-link" role="button" aria-label="Volver al inicio">Volver al inicio</a>
            </div>

        </main>
    </div>
</body>
</html>
